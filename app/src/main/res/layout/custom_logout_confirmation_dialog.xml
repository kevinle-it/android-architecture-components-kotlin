<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_logout_confirmation_dialog_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_roboto_regular"
        android:gravity="center"
        android:paddingStart="@dimen/custom_logout_confirmation_dialog_message_left_right_padding"
        android:paddingLeft="@dimen/custom_logout_confirmation_dialog_message_left_right_padding"
        android:paddingTop="@dimen/custom_logout_confirmation_dialog_message_top_bottom_padding"
        android:paddingEnd="@dimen/custom_logout_confirmation_dialog_message_left_right_padding"
        android:paddingRight="@dimen/custom_logout_confirmation_dialog_message_left_right_padding"
        android:paddingBottom="@dimen/custom_logout_confirmation_dialog_message_top_bottom_padding"
        android:text="Are You Sure You Want To Log Out?"
        android:textColor="@android:color/white"
        android:textSize="@dimen/custom_logout_confirmation_dialog_message_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_logout_confirmation_dialog_horizontal_divider_height"
        android:background="@color/tuna" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="@string/font_family_roboto_regular"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/custom_logout_confirmation_dialog_action_top_bottom_padding"
            android:paddingBottom="@dimen/custom_logout_confirmation_dialog_action_top_bottom_padding"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/custom_logout_confirmation_dialog_action_text_size"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/custom_logout_confirmation_dialog_vertical_divider_width"
            android:layout_height="match_parent"
            android:background="@color/tuna" />

        <TextView
            android:id="@+id/action_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="@string/font_family_roboto_regular"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/custom_logout_confirmation_dialog_action_top_bottom_padding"
            android:paddingBottom="@dimen/custom_logout_confirmation_dialog_action_top_bottom_padding"
            android:text="Log Out"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/custom_logout_confirmation_dialog_action_text_size" />

    </LinearLayout>

</LinearLayout>
